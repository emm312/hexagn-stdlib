@FUNC setpixel
@SIGNATURE void int16 int16 int32
LLOD R2 R1 2
OUT %X R2
LLOD R2 R1 3
OUT %Y R2
LLOD R2 R1 4
OUT %COLOR R2
@END

@FUNC getpixel
@SIGNATURE int32 int32 int32
LLOD R2 R1 2
OUT %X R2
LLOD R2 R1 3
OUT %Y R2
IN R2 %COLOR
@END

@FUNC buffer
@SIGNATURE void int8
LLOD R2 R1 2
OUT %BUFFER R2
@END

@FUNC buffer
@SIGNATURE void int16
LLOD R2 R1 2
OUT %BUFFER R2
@END

@FUNC buffer
@SIGNATURE void int32
LLOD R2 R1 2
OUT %BUFFER R2
@END